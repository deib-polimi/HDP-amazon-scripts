#!/bin/bash
#run this to install the scripts in the proper place in a "clean VM" (requirements software have to be installed for scripts to work)
script_folder="/home/ubuntu/scripts/"
cp fixhostname.bsh $script_folder
cp hostnameEcho.bsh $script_folder
cp ambari-agent.ini $script_folder
cp master_setup.bsh $script_folder
cp setup.bsh $script_folder
cp slave_setup.bsh $script_folder
cp update_key.bsh $script_folder

sudo cp -f hosts.template /etc/
sudo cp -f rc.local /etc/