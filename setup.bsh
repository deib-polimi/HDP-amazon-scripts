#!/bin/bash
#discriminate if slave or master by user provided meta-data when launching the instance
arguments=$(wget -qO- http://instance-data/latest/user-data/ | grep AWS_SECRET_KEY)
if [ -z "$arguments"]; then
  echo "I'm a Slave Instance"
  bash /home/ubuntu/scripts/slave_setup.bsh
else
  echo "I'm the Master Instance"
  bash /home/ubuntu/scripts/master_setup.bsh
fi



